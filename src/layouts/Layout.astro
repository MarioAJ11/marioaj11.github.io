---
import "../styles/global.css";
import Header from "../components/Header.astro";

const { title = "Portafolio" } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap" rel="stylesheet" />
    <slot name="head" />
  </head>
  <body class="relative min-h-screen bg-gradient-to-br from-pastelBlue/40 via-white to-pastelOrange/20 text-gray-800 font-inter">
    <div class="pointer-events-none fixed inset-0 -z-20 overflow-hidden">
      <div class="absolute -left-32 -top-24 h-96 w-96 rounded-full bg-pastelBlue/30 blur-3xl"></div>
      <div class="absolute -right-24 top-20 h-72 w-72 rounded-full bg-pastelOrange/30 blur-3xl"></div>
      <div class="absolute bottom-[-120px] left-1/3 h-80 w-80 rounded-full bg-white/40 blur-[120px]"></div>
    </div>
    <Header />
    <main class="relative z-10 mx-auto max-w-5xl px-6 py-16">
      <slot />
    </main>
    <footer class="relative z-10 mt-20 border-t border-white/60 py-10 text-center text-sm text-gray-500 backdrop-blur">
      <p class="font-medium text-gray-600">Construido con Astro, Tailwind CSS y GSAP</p>
      <p class="mt-2 text-xs text-gray-500">© {new Date().getFullYear()} Mario Alguacil Juárez · Córdoba, España</p>
      <div class="mt-4 flex justify-center gap-4 text-sm font-semibold text-pastelOrange">
        <a href="mailto:alguacilmario6@gmail.com" class="transition hover:text-pastelBlue">Email</a>
        <a href="https://www.linkedin.com/in/marioaj11" target="_blank" rel="noopener noreferrer" class="transition hover:text-pastelBlue">LinkedIn</a>
        <a href="https://github.com/MarioAJ11" target="_blank" rel="noopener noreferrer" class="transition hover:text-pastelBlue">GitHub</a>
      </div>
    </footer>
  </body>
</html>
